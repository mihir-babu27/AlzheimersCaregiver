<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:padding="12dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sequence Memory"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Score/Level Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Level Display -->
            <TextView
                android:id="@+id/levelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 1"
                android:textSize="18sp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="24dp" />

            <!-- Score Display -->
            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0"
                android:textSize="18sp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Game Instructions -->
        <TextView
            android:id="@+id/instructionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch the sequence, then tap the buttons in the same order"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- 2x2 Grid Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Game Grid -->
            <GridLayout
                android:id="@+id/gameGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_gravity="center">

                <!-- Top Row -->
                <Button
                    android:id="@+id/button1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/game_button_background"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:elevation="4dp"
                    android:stateListAnimator="@null"
                    android:layout_row="0"
                    android:layout_column="0" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/game_button_background"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:elevation="4dp"
                    android:stateListAnimator="@null"
                    android:layout_row="0"
                    android:layout_column="1" />

                <!-- Bottom Row -->
                <Button
                    android:id="@+id/button3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/game_button_background"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:elevation="4dp"
                    android:stateListAnimator="@null"
                    android:layout_row="1"
                    android:layout_column="0" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/game_button_background"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:elevation="4dp"
                    android:stateListAnimator="@null"
                    android:layout_row="1"
                    android:layout_column="1" />

            </GridLayout>

        </LinearLayout>

        <!-- Game Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap 'Start Round' to begin"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Start Round Button -->
        <Button
            android:id="@+id/startRoundButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Start Round"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/primary_button_background"
            android:fontFamily="sans-serif-medium"
            android:elevation="2dp"
            android:stateListAnimator="@null" />

    </LinearLayout>

</LinearLayout>