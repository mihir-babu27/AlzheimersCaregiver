<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Game Icon/Image Container -->
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/rounded_background_light"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <!-- Game Icon (you can replace with actual icons) -->
            <TextView
                android:id="@+id/gameIconText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§ "
                android:textSize="24sp" />

        </LinearLayout>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Game Title -->
            <TextView
                android:id="@+id/gameTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory Game"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Game Description -->
            <TextView
                android:id="@+id/gameDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test your memory with this fun matching game"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            app:tint="@color/text_secondary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>